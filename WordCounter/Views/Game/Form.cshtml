@{
    Layout = "_Layout";
}

<h1>Let's Find Some Word Matches!</h1>
<form action="/results" method="post">
    <div class="form-group">
        <label for="new-word">Enter Your Word</label>
        <input id="new-word" name="new-word" class="form-control" type="text">
    </div>
    <div class="form-group">
        <label for="new-phrase">Enter Search Phrase</label>
        <input id="new-phrase" name="new-phrase" class="form-control" type="text">
    </div>
    <button type="submit" class="btn btn-info">Search</button>
</form>